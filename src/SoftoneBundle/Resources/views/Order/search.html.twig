{% block body %}
    <div>   
        <div class="" style="float:left;  width: 100%; margin: 0; padding: 0"> 
            <div class="col-lg-6 ">
                <div class="col-lg-12 ">
                    <div class="height-2 form" style="float:left;  width: 100%; margin: 0; padding: 0">
